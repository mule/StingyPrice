@using System.Collections
@using StingyPriceDAL.Models
@{
    Layout = "_StingyMasterLayout.cshtml";
}
@section SearchBox{
@using (Html.BeginForm("Search", "Products"))
{

    @Html.TextBox("txtSearchStr")
    
}
}
@section CategoryMenuBox {
    @{


        var menu = Html.Telerik().Menu()
            .Name("MainMenu").BindTo(ViewBag.CategoryTree.SubCategories as IEnumerable<Category>, mappings => mappings.For<Category>(binding => binding
                                                                                                                 .ItemDataBound((item, category) =>
                                                                                                                                    {
                                                                                                                                        item.Text = category.Name;
                                                                                                                                    })
                                                                                                                 .Children(category => category.SubCategories)));
                                                                                                                 
                                                                                                                 


        menu.Render();
    
    }
}
@RenderBody() 

